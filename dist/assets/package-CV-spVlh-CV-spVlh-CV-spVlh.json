{
  "name": "grammar-checker-extension",
  "version": "1.0.0",
  "description": "Browser extension for grammar checking in Thai, English, and Japanese",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build && powershell -ExecutionPolicy Bypass -File .\\scripts\\post-build.ps1",
    "build:check": "tsc && vite build",
    "build:prod": "node -e \"require('child_process').execSync(process.platform === 'win32' ? 'powershell -ExecutionPolicy Bypass -File .\\\\build.ps1' : 'bash build.sh', {stdio: 'inherit'})\"",
    "build:wasm": "cd wasm && cargo build --release --target wasm32-unknown-unknown",
    "preview": "vite preview",
    "test": "jest",
    "test:watch": "jest --watch",
    "lint": "eslint . --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx,json}\""
  },
  "devDependencies": {
    "@types/chrome": "^0.0.254",
    "@types/jest": "^29.5.11",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.2",
    "fake-indexeddb": "^6.2.5",
    "fast-check": "^3.15.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "prettier": "^3.1.1",
    "terser": "^5.44.1",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3",
    "vite": "^5.0.10",
    "vite-plugin-static-copy": "^1.0.0"
  }
}
