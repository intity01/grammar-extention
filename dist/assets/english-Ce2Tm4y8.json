{
  "language": "en",
  "version": "1.0.0",
  "rules": [
    {
      "id": "en_001",
      "language": "en",
      "pattern": "\\ba\\s+[aeiouAEIOU]\\w*",
      "errorType": "article",
      "message": "Use 'an' before words starting with a vowel sound",
      "correction": "an",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_002",
      "language": "en",
      "pattern": "\\btheir\\s+is\\b",
      "errorType": "spelling",
      "message": "Did you mean 'there is'?",
      "correction": "there is",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_003",
      "language": "en",
      "pattern": "\\btheir\\s+are\\b",
      "errorType": "spelling",
      "message": "Did you mean 'there are'?",
      "correction": "there are",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_004",
      "language": "en",
      "pattern": "\\bthey're\\s+(is|are)\\b",
      "errorType": "spelling",
      "message": "Did you mean 'their' or 'there'?",
      "correction": "their",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_005",
      "language": "en",
      "pattern": "\\bits\\s+own\\b",
      "errorType": "spelling",
      "message": "Did you mean 'its own' (possessive)?",
      "correction": "its own",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_006",
      "language": "en",
      "pattern": "\\byour\\s+(is|are|was|were)\\b",
      "errorType": "spelling",
      "message": "Did you mean 'you're' (you are)?",
      "correction": "you're",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_007",
      "language": "en",
      "pattern": "\\bcould\\s+of\\b",
      "errorType": "grammar",
      "message": "Use 'could have' instead of 'could of'",
      "correction": "could have",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_008",
      "language": "en",
      "pattern": "\\bshould\\s+of\\b",
      "errorType": "grammar",
      "message": "Use 'should have' instead of 'should of'",
      "correction": "should have",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_009",
      "language": "en",
      "pattern": "\\bwould\\s+of\\b",
      "errorType": "grammar",
      "message": "Use 'would have' instead of 'would of'",
      "correction": "would have",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_010",
      "language": "en",
      "pattern": "\\balot\\b",
      "errorType": "spelling",
      "message": "Did you mean 'a lot' (two words)?",
      "correction": "a lot",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_011",
      "language": "en",
      "pattern": "\\b(the|a|an|is|are|was|were|have|has|had|will|would|could|should|can|may|might)\\s+\\1\\b",
      "errorType": "redundancy",
      "message": "Duplicate word detected",
      "correction": "$1",
      "severity": "warning",
      "enabled": true
    },
    {
      "id": "en_012",
      "language": "en",
      "pattern": "\\s{2,}",
      "errorType": "spacing",
      "message": "Multiple spaces detected",
      "correction": " ",
      "severity": "warning",
      "enabled": true
    },
    {
      "id": "en_013",
      "language": "en",
      "pattern": "\\brecieve\\b",
      "errorType": "spelling",
      "message": "Incorrect spelling. Use 'receive' (i before e except after c)",
      "correction": "receive",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_014",
      "language": "en",
      "pattern": "\\boccured\\b",
      "errorType": "spelling",
      "message": "Incorrect spelling. Use 'occurred' (double r)",
      "correction": "occurred",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_015",
      "language": "en",
      "pattern": "\\bseperate\\b",
      "errorType": "spelling",
      "message": "Incorrect spelling. Use 'separate'",
      "correction": "separate",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_016",
      "language": "en",
      "pattern": "\\bdefinately\\b",
      "errorType": "spelling",
      "message": "Incorrect spelling. Use 'definitely'",
      "correction": "definitely",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_017",
      "language": "en",
      "pattern": "\\baccommodate\\b",
      "errorType": "spelling",
      "message": "Check spelling: 'accommodate' has double c and double m",
      "correction": "accommodate",
      "severity": "info",
      "enabled": true
    },
    {
      "id": "en_018",
      "language": "en",
      "pattern": "\\bbetween\\s+you\\s+and\\s+I\\b",
      "errorType": "grammar",
      "message": "Use 'between you and me' (objective case)",
      "correction": "between you and me",
      "severity": "error",
      "enabled": true
    },
    {
      "id": "en_019",
      "language": "en",
      "pattern": "\\bless\\s+(people|items|things|books|cars)\\b",
      "errorType": "grammar",
      "message": "Use 'fewer' with countable nouns",
      "correction": "fewer",
      "severity": "warning",
      "enabled": true
    },
    {
      "id": "en_020",
      "language": "en",
      "pattern": ",\\s*,",
      "errorType": "punctuation",
      "message": "Double comma detected",
      "correction": ",",
      "severity": "error",
      "enabled": true
    }
  ]
}
